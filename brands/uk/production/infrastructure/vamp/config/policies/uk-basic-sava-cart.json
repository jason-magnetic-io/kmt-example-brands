{
  "name": "sava-cart-basic",
  "gracePeriod": "5m",
  "steps": [
    {
      "duration": "5m",
      "source": { "weight": 100 },
      "target": {
        "weight": 0,
        "condition": "user-agent = iPhone",
        "conditionStrength": 100
      },
      "conditions": [
        {
          "value": "health >= baselines.health",
          "gracePeriod": "2m"
				},
				{
					"value": "availableReplicas >= baselines.minReplicas",
					"gracePeriod": "2m"
				}
      ]
    },
    {
      "duration": "5m",
      "source": { "weight": 50 },
      "target": { "weight": 50 },
      "conditions": [
        {
          "value": "health >= baselines.health",
          "gracePeriod": "2m"
				},
				{
					"value": "availableReplicas >= baselines.minReplicas",
					"gracePeriod": "2m"
				}
      ]
    },
    {
      "source": { "weight": 0 },
      "target": { "weight": 100 }
    }
  ],
  "metrics": [
    {
      "name": "health",
      "value": {
        "source": "es",
        "index": "vamp-pulse-{namespace}-health-*",
        "tags": [
          "health",
          "deployments:{gateway}",
          "routes:({target_route})"
        ]
      }
    },
    {
      "name": "availableReplicas",
      "value": {
        "source": "es",
        "index": "vamp-pulse-{namespace}-allocation-*",
        "tags": [
          "allocation",
          "gateway:{gateway}",
          "version:{target_route}"
        ],
        "field": "allocation.kubernetes.replicas.available"
      }
    }
  ],
  "baselines": [
    {
      "name": "health",
      "metric": "health",
      "value": 0.95
    },
    {
      "name": "minReplicas",
      "metric": "availableReplicas",
      "value": 1
    }
  ],
  "onSuccess": [
    {
      "type": "http",
      "value": {
        "url": "https://circleci.com/api/v1.1/project/github/jason-magnetic-io/kmt-example-release-jobs",
        "headers": ["content-type: application/x-www-form-urlencoded"],
        "user": "8e95a2ba50255c4886fc97e2f7f55ffa2cfec4f7",
        "httpRequest": "POST",
        "data": [
          "build_parameters[CIRCLE_JOB]=update-rp-sava-cart-205-uk-prod"
        ]
      }
    }
  ]
}